# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mutual_followers
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/mutual_followers

# Telegram Bot (user-facing)
TELEGRAM_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username

# Telegram Admin Bot (for admin notifications, can be same as user bot)
ADMIN_BOT_TOKEN=your_admin_bot_token_here

# Manager contact for user support
MANAGER_USERNAME=issue_resolver

# Instagram (required for authenticated requests)
INSTAGRAM_SESSION_ID=your_session_id_here

# Application
UPLOAD_DIR=./data/checks
DEBUG=True
MAX_CHECKS_PER_DAY=5

# API (for bot service)
API_BASE_URL=http://app:8000

# Admin users (comma-separated Telegram user IDs)
ADMIN_USER_IDS=123456789

# Queue settings
MAX_CONCURRENT_CHECKS=1
QUEUE_PROCESSING_INTERVAL=5

# Referral program
REFERRAL_BONUS_CHECKS=1
REFERRAL_REQUIRED_COUNT=10

# Robokassa (payment gateway - for future integration)
ROBOKASSA_MERCHANT_LOGIN=
ROBOKASSA_PASSWORD_1=
ROBOKASSA_PASSWORD_2=
ROBOKASSA_TEST_MODE=True

# Session Auto-Refresh (optional - for automatic Instagram session renewal)
# Redis URL for TaskIQ background tasks
REDIS_URL=redis://localhost:6379/0
# Set to true to enable Redis-based task queue
USE_REDIS=false
# Encryption key for storing Instagram credentials (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
ENCRYPTION_KEY=
# Secret key for the application (used as fallback for encryption)
SECRET_KEY=change-me-in-production
